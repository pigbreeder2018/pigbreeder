<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back1">

        <!--  <ImageView
            android:id="@+id/pigavatar_image_female_pig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pigavatar" />-->


        <TextView
            android:id="@+id/female_breed_inserminated"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:text="PIG BREED"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_of_insermination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="2018/07/2"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/male_breed_used_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/date_of_insermination"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="MALE PIG BREED USED"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--  <ImageView
            android:id="@+id/male_pig_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/male_breed_used_"
            android:layout_alignEnd="@+id/pigavatar_image_female_pig"
            app:srcCompat="@drawable/pigavatar" />-->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/female_breed_inserminated"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Date Of Insermination"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>