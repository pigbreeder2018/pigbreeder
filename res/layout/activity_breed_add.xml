<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f9"
    tools:context="pigbreeder.excalber.example.com.pigbreeder.Breed_add">

    <EditText
        android:id="@+id/male_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/calender"
        android:layout_marginTop="58dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="MALE BREED USED FOR INSERMINATION"
        android:inputType="textPersonName"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/female_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/male_breed"
        android:layout_marginTop="76dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="FEMALE BREED TO INSERMINATE"
        android:inputType="textPersonName"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/add_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dateview"
        android:layout_below="@+id/female_breed"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="88dp"
        android:text="SAVE" />

    <ImageButton
        android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="68dp"
        app:srcCompat="@drawable/cal" />

    <TextView
        android:id="@+id/dateview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/male_breed"
        android:layout_alignTop="@+id/calender"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

</RelativeLayout>
